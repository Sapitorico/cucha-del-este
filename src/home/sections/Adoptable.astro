---
import Button from '@/components/Button.astro'
import CardCuchano from '@/components/CardCuchano.astro'
import Carousel from '@/components/Carousel.astro'
import CarouselItem from '@/components/CarouselItem.astro'
---

<section class="grid place-items-center py-8 text-center px-6">
  <div
    class="container items-center justify-between overflow-hidden text-center"
  >
      <p class="text-[0.5rem]">
        Conoce a nuestros Cuchanos
      </p>
      <h2 class="text-sm font-extrabold mb-6 mt-2">Encuentra a tu Nuevo Mejor Amigo</h2>
    <Carousel>
      {
        Array.from({ length: 5 }).map((_, index) => (
          <CarouselItem class="grid place-items-center pl-4 md:basis-1/2 lg:basis-1/3">
            <CardCuchano />
          </CarouselItem>
        ))
      }
    </Carousel>
    <Button class="w-full mt-6 mb-1" color="primary" size="M">Todos nuestros Cuchanos</Button>
  </div>
</section>
