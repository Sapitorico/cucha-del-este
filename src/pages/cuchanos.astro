---
import CardCuchano from '@/components/CardCuchano.astro'
import Layout from '@/layouts/Layout.astro'
---

<Layout title="Cuchanos">
  <main class="grid place-items-center">
    <section class="container p-4">
      <h1 class="my-6 text-center text-3xl font-black">Conoce a Nuestors Cuchanos</h1>
      <div
        class="grid w-full grid-cols-[repeat(auto-fit,minmax(288px,1fr)))] place-items-center gap-6 px-4"
      >
        {Array.from({ length: 10 }).map((_, index) => <CardCuchano />)}
      </div>
    </section>
  </main>
</Layout>
