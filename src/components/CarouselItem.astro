---
import type { HTMLAttributes } from 'astro/types'

interface Props extends HTMLAttributes<'div'> {
  className?: string
}

const { className, ...rest } = Astro.props
---

<div
  role="group"
  class:list={['min-w-0 flex-[1_0_100%] transform-[translate3d(0,0,0)]']}
  class={rest.class}
  {...rest}
>
  <slot />
</div>
