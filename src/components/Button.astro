---
const colors = {
  default: 'bg-black',
  primary: 'bg-primary',
}

const sizes = {
  L: 'py-3',
  M: 'py-2',
}

interface Props {
  color?: keyof typeof colors
  size?: keyof typeof sizes
}

const { color = 'default', size = 'L' } = Astro.props
---

<button
  class:list={[
    'active:shadow-sm',
    'active:translate-0',
    'flex',
    'w-48',
    'transform',
    'cursor-pointer',
    'border-2',
    'border-black',
    colors[color],
    sizes[size],
    'shadow-sm',
    'transition-all',
    'ease-out',
    'hover:-translate-1',
    'hover:shadow-lg',
  ]}
>
  <span class="w-full text-center text-lg font-semibold text-white"><slot /></span>
</button>
