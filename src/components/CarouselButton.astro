---
import type { HTMLAttributes } from 'astro/types'

interface Props extends HTMLAttributes<'button'> {
  className?: string
}

const { className, ...props } = Astro.props
---

<button
  class={`md:grid place-items-center border-1 h-12 w-12 transition-colors focus-visible:outline-none disabled:pointer-events-none disabled:opacity-50 hidden ${className || ''}`}
  {...props}
>
  <slot />
</button>
